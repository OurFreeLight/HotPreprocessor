		},
		{
			"type": "node",
			"request": "launch",
			"name": "Create an App API",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"create",
				"--type",
				"api",
				"--overwrite-cmd-create-transpile",
				"npm link hotpreprocessor && npm run build",
				"app"
			]
		},
