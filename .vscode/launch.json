{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug HTTP Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"outputCapture": "std",
			"args": [
				"-d"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch HTTP Test Server",
			"program": "${workspaceFolder}/build/src/TestServer.js",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"runtimeArgs": [
				"--inspect=127.0.0.1:7478"
			],
			"port": 7478,
			"args": [
				"--timeout",
				"500000",
				"--colors",
				"${workspaceFolder}/build/tests/**/*.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}