{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug HTTP Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"outputCapture": "std",
			"args": [
				"-d",
				"--js-url",
				"/build-web/HotPreprocessor.js",
				"--serve-hott-files",
				"-h",
				"8080"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch HTTP Test Server",
			"program": "${workspaceFolder}/build/src/TestServer.js",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"program": "${workspaceFolder}/node_modules/buildci/bin/buildci",
			"port": 7478,
			"args": [
				"run",
				"tests",
				"7478",
				"all"
			],
			"env": {
				"HTTP_PORT": "3123",
				"DATABASE_SERVER": "127.0.0.1",
				"DATABASE_USERNAME": "root",
				"DATABASE_PASSWORD": "cdO1KjwiC8ksOqCV1s0",
				"DATABASE_SCHEMA": "freelight"
			},
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}