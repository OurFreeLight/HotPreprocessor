	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"name": "Debug Web Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"run",
				"--web-route",
				"/=${workspaceFolder}",
				"--web-dont-redirect-http-to-https",
				"--web-js-url",
				"/build-web/HotPreprocessor.js",
				"--web-serve-hott-files",
				"--web-http-port",
				"8080"
			]
		},
		{
			"type": "node",
			"name": "Debug API Server",
			"program": "${workspaceFolder}/build/src/cli.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"run",
				"--server-type",
				"api",
				"--api-load",
				"HelloWorldAPI=${workspaceFolder}/build/tests/server/HelloWorldAPI.js",
				"--api-dont-redirect-http-to-https",
				"--api-http-port",
				"8181"
			]
		},
