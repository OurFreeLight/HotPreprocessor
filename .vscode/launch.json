			"type": "node",
			"request": "launch",
			"name": "Debug Web Server - Development",
			"program": "${workspaceFolder}/build/src/cli.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outputCapture": "std",
			"args": [
				"run",
				"--web-dont-redirect-http-to-https",
				"--development-mode",
				"--web-js-url",
				"/build-web/HotPreprocessor.js",
				"--web-serve-hott-files",
				"--web-http-port",
				"8080"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Build from HotSite",
			"program": "${workspaceFolder}/build/src/cli.js",
