{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch HTTP Test Server",
			"program": "${workspaceFolder}/build/tests/TestServer.js",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"port": 7478,
			"args": [
				"--inspect-brk=127.0.0.1:7478",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/build/tests/local/*.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}