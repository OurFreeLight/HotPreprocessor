{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "Build"
		},
		{
			"type": "shell",
			"group": "build",
			"problemMatcher": [],
			"label": "Build web debug",
			"command": "npx webpack --mode=development --debug --watch"
		},
		{
			"type": "shell",
			"group": "build",
			"problemMatcher": [],
			"label": "Build web tests",
			"command": "npx webpack --mode=development --config=webpack.config.tests.js --debug --watch"
		}
	]
}